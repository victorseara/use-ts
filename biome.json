{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "lf",
		"indentWidth": 2,
		"lineWidth": 80,
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"include": [
			"src"
		],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"style": {
				"noDefaultExport": "error",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false,
						"requireAscii": true,
						"filenameCases": [
							"kebab-case",
							"export"
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"bracketSameLine": false,
			"arrowParentheses": "always",
			"jsxQuoteStyle": "single",
			"bracketSpacing": true,
			"semicolons": "always",
			"quoteStyle": "single",
			"trailingComma": "all"
		}
	}
}
